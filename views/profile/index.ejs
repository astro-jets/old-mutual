<link rel="stylesheet" href="../../assets/css/messages.css" />
<section class="py-5 my-5">
  <div class="container">
    <div class="bg-white shadow rounded-lg d-block d-sm-flex col-13">
      <div class="profile-tab-nav border-right col-3">
        <div class="p-4">
          <div class="img-circle text-center mb-3">
            <img
              src="<%=user.avatarPath %>"
              alt=""
              style="height: 150px; width: 150px; object-fit: cover"
              class="rounded-circle"
            />
          </div>
          <h4 class="text-center"><%=user.username%></h4>
        </div>
        <div
          class="nav flex-column nav-pills"
          id="v-pills-tab"
          role="tablist"
          aria-orientation="vertical"
        >
          <a
            class="nav-link active"
            id="messages-tab"
            data-toggle="pill"
            href="#messages"
            role="tab"
            aria-controls="service"
            aria-selected="false"
          >
            <i class="fa fa-envelope text-center mr-1"></i>
            messages
          </a>
          <a
            class="nav-link"
            id="account-tab"
            data-toggle="pill"
            href="#account"
            role="tab"
            aria-controls="account"
            aria-selected="true"
          >
            <i class="fa fa-briefcase text-center mr-1"></i>
            Account
          </a>
          <a
            class="nav-link"
            id="password-tab"
            data-toggle="pill"
            href="#password"
            role="tab"
            aria-controls="password"
            aria-selected="false"
          >
            <i class="fa fa-key text-center mr-1"></i>
            Password
          </a>
          <a
            class="nav-link"
            id="service-tab"
            data-toggle="pill"
            href="#service"
            role="tab"
            aria-controls="service"
            aria-selected="false"
          >
            <i class="fa fa-gift text-center mr-1"></i>
            Services
          </a>
        </div>
      </div>
      <div class="tab-content col-9 p-md-5" id="v-pills-tabContent">
        <!-- Account Details -->
        <div
          class="tab-pane fade"
          id="account"
          role="tabpanel"
          aria-labelledby="account-tab"
        >
          <h3 class="mb-4">Personal Details</h3>
          <div class="col-md-12">
            <div class="col-md-12">
              <div class="form-group">
                <label>Username</label>
                <input
                  type="text"
                  class="form-control"
                  value="<%=user.username%>"
                />
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label>Email</label>
                <input
                  type="text"
                  class="form-control"
                  value="<%= user.email %>"
                />
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label>Phone number</label>
                <input
                  type="text"
                  class="form-control"
                  value="+265 123 123 123"
                />
              </div>
            </div>
          </div>
          <div>
            <button class="btn btn-primary">Update</button>
            <button class="btn btn-dark">Cancel</button>
          </div>
        </div>
        <!-- Account Details -->

        <!-- Password Details -->
        <div
          class="tab-pane fade"
          id="password"
          role="tabpanel"
          aria-labelledby="password-tab"
        >
          <h3 class="mb-4">Password Settings</h3>
          <div class="col">
            <div class="col-md-12">
              <div class="form-group">
                <label>Old password</label>
                <input type="password" class="form-control" />
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label>New password</label>
                <input type="password" class="form-control" />
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label>Confirm new password</label>
                <input type="password" class="form-control" />
              </div>
            </div>
          </div>
          <div>
            <button class="btn btn-primary">Update</button>
            <button class="btn btn-light">Cancel</button>
          </div>
        </div>
        <!-- Password Details -->

        <!-- Subscribed Services -->
        <div
          class="tab-pane fade"
          id="service"
          role="tabpanel"
          aria-labelledby="service-tab"
        >
          <h3 class="mb-4">Subscribed services</h3>
          <div class="row">
            <div class="mt-4 col-12">
              <div class="table-responsive">
                <table class="table">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col">Service</th>
                      <th scope="col">Cost</th>
                      <th scope="col">Subscription Date</th>
                      <th scope="col">&nbsp;</th>
                    </tr>
                  </thead>
                  <tbody class="customtable">
                    <% sub.forEach(sub=> { %>
                    <tr>
                      <td><%=sub.service%></td>
                      <td>MK <%=sub.cost%>/pm</td>
                      <td><%=sub.date%></td>
                      <td>
                        <a
                          class="btn btn-danger py-2"
                          href="/services/unsubscribe/<%=sub.id%>"
                        >
                          <i class="fa fa-trash"></i>
                          Unsubscribe
                        </a>
                      </td>
                    </tr>
                    <%});%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- Subscribed Services -->

        <!-- Messages -->
        <div
          class="tab-pane fade show active"
          id="messages"
          role="tabpanel"
          aria-labelledby="messages-tab"
        >
          <%-include('chatbox') %>
        </div>
        <!-- Messages -->
      </div>
    </div>
  </div>
</section>
