<main id="main" class="main">
    <div class="pagetitle">
        <h1>Messages</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Messages</li>
            </ol>
        </nav>
    </div>
    <section class="section">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pt-3">
                    <nav class="header-nav ms-auto">
                        <ul class="messages">
                            <li class="message-item">
                                <a href="#show-form" data-bs-toggle="tab" data-bs-target="#show-form">
                                    <img src="../../img/messages-1.jpg" alt="" class="rounded-circle" />
                                    <div>
                                        <h><%=data.name%></h3>
                                        <p class="mt-1"><%=data.email%></p>
                                        <hr class="dropdown-divider" />
                                        <h4 class="mt-3 mb-3" ><%=data.title%></h4>
                                        <p class="mt-3 mb-3 text-dark">
                                            <%=data.message%>
                                        </p>
                                        <p class="col-xl-6"><%=data.date%></p>
                                    </div>
                                </a>
                                <form class="row mt-1 g-3 needs-validation" action="/admin/message/:id/reply" method="post">
                                    <div class="col-11 mx-5 pl-5">
                                        <div class="input-group has-validation">
                                            <textarea name="response" class="col-xl-12 rounded" rows="10"></textarea>
                                            <div class="invalid-feedback">
                                                Please enter your email.
                                            </div>
                                            <button type="submit" class=" col-xl-4 mt-2 btn btn-primary rounded">
                                                <i class="bi bi-reply"></i>
                                                Reply
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </li>
                        </ul>
                        
                        <!-- Messages Section -->
                    </nav>
                </div>
            </div>
        </div>
        
    </section>
</main>